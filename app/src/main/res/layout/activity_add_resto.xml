<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_resto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.radiantridge.restoradiantridge.activities.AddRestoActivity">

    <TextView
        style="@style/titleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_add_resto"
        android:textColor="@color/purple" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1">

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textRestoName"
                style="@style/formStyle"
                android:text="@string/resto_name"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editRestoName"
                style="@style/editText"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textNameError"
                android:layout_span="2"
                android:text="@string/name_error"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textRestoAdd"
                style="@style/formStyle"
                android:text="@string/resto_add"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editAddress"
                style="@style/editText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:lines="3"
                android:scrollHorizontally="false"
                android:gravity="top" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textAddressError"
                android:layout_span="2"
                android:text="@string/genre_error"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textPhone"
                style="@style/formStyle"
                android:text="@string/resto_phone"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextPhone"
                style="@style/editText"
                android:inputType="phone" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textGenre"
                style="@style/formStyle"
                android:text="@string/resto_genre"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editGenre"
                style="@style/editText"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textGenreError"
                android:layout_span="2"
                android:text="@string/genre_error"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textPrice"
                style="@style/formStyle"
                android:text="@string/resto_price"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editPrice"
                style="@style/editText"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textPriceError"
                android:layout_span="2"
                android:text="@string/price_error"
                android:textColor="@color/colorAccent"
                android:visibility="gone" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textNotes"
                style="@style/formStyle"
                android:text="@string/resto_notes"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editNotes"
                style="@style/editText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:lines="3"
                android:scrollHorizontally="false"
                android:gravity="top" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textLongitude"
                style="@style/formStyle"
                android:text="@string/resto_longitude"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editLongitude"
                style="@style/editText"
                android:inputType="numberSigned"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:id="@+id/textLatitude"
                style="@style/formStyle"
                android:text="@string/resto_latitude"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editLatitude"
                style="@style/editText"
                android:inputType="numberSigned"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

    <!-- TODO: finish stars, alignment still a bit off-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/textRating"
            style="@style/formStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resto_rating"
            android:layout_weight="1"/>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="1.0"
            android:theme="@style/ratingStyle" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveResto"
        android:text="@string/button_save" />
</LinearLayout>
