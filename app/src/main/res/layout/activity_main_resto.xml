<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_resto_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.radiantridge.restoradiantridge.activities.MainRestoActivity"
android:orientation="vertical"
android:background="@color/background">

<!-- TODO: These buttons will be image buttons in the future -->
<!-- The strings are temporary, they will be replaced with the images -->
<Button
    android:id="@+id/logoBtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="this will be our logo"
    android:onClick="launchAbout"
    android:layout_weight="1"/>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6">
    <TableRow
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/favoritesBtn"
            android:src="@drawable/favorites_icon"
            android:onClick="launchFavorites"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/activity_vertical_margin"/>
        <ImageButton
            android:id="@+id/searchBtn"
            android:src="@drawable/search_icon"
            android:onClick="launchSearch"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/activity_vertical_margin"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/nearbyBtn"
            android:src="@drawable/nearby_icon"
            android:onClick="launchNearby"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/activity_vertical_margin"/>
        <ImageButton
            android:id="@+id/tipCalcBtn"
            android:src="@drawable/calculator_icon"
            android:onClick="launchTipCalc"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/activity_vertical_margin"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/addRestoBtn"
            android:src="@drawable/add_icon"
            android:onClick="launchAddResto"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/activity_vertical_margin"/>
        <ImageButton
            android:id="@+id/pickerBtn"
            android:src="@drawable/places_icon"
            android:onClick="launchPicker"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:padding="@dimen/activity_vertical_margin"/>
    </TableRow>
</TableLayout>

<TextView
    android:id="@+id/main_greeting"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:textColor="@color/text"/>
</LinearLayout>

