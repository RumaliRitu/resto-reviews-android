<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/lighter_grey</item>
    </style>

    <style name="textStyle" parent="AppTheme">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="titleStyle" parent="AppTheme">
        <item name="android:textSize">60sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="formStyle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="editText" parent="AppTheme">
        <item name="android:background">@color/grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="buttonStyle" parent="AppTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/lighter_grey</item>
    </style>
    
    <style name="ratingStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lighter_grey</item>
        <item name="colorControlActivated">@color/lighter_grey</item>
    </style>

    <style name="reviewStyle" parent="textStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="errorStyle" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
